
<!DOCTYPE html>
<html>
<head>
	<meta content="text/html" charset="UTF-8">
	<link rel="stylesheet" href="{{ base_url('assets/css/bootstrap.css') }}">
	<link rel="stylesheet" href="{{ base_url('assets/css/bootstrap-theme.min.css') }}">
	<link rel="stylesheet" href="{{ base_url('assets/css/font-awesome.min.css') }}">
	<link rel="stylesheet" href="{{ base_url('assets/css/login.css') }}">
	<script type="text/javascript" src="{{ base_url('assets/js/jquery-3.2.1.min.js') }}"></script>
	
	<script type="text/javascript" src="{{ base_url('assets/js/thien_function.js') }}"></script>
	<script type="text/javascript" src="{{ base_url('assets/js/bootstrap.min.js') }}"></script>
</head>
<body>
	<div class="container">
		<div class="row">
		    <div class="col-md-6 col-md-offset-3">
		      	<div class="panel panel-login">
		       		<div class="panel-body">
		          		<div class="row">
	            			<div class="col-lg-12">
	              				{{ form_open_multipart('login', 'id="login-form" style="display: block;"') }}
	                				<h2>LOGIN</h2>
				                  	<div class="form-group">
				                    	<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" required="required" pattern="[0-9a-z]{3,20}" title="The Username field must be between 3 and 20 characters in length, and contain only digits and lowercase letters" value="{{ set_value('username') }}">
				                    	{{ form_error('username', '<div class="shj_error">', '</div>') }}
				                  	</div>
				                  	<div class="form-group">
				                    	<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password" required="required" pattern=".{6,200}" title="The Password field must be at least 6 characters in length">
				                    	{{ form_error('password', '<div class="shj_error">', '</div>') }}
				                  	</div>
						            {% if error %}
										<div class="shj_error">Incorrect username or password.</div>
									{% endif %}
				                  	<div class="col-xs-6 form-group pull-left">
				                    	<a href="{{ site_url('login/lost') }}">Reset Password</a> 
				                  	</div>
				                  	<div class="col-xs-6 form-group pull-right">     
				                        <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
					                </div>
								</form>

              					
				            	{{ form_open_multipart('register', 'id="register_form" style="display: none;"') }}
					                <h2>REGISTER</h2>
				                  	<div class="form-group">
				                    	<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" title="The Username field must be between 3 and 20 characters in length, and contain only alpha-numeric characters" value="{{ set_value('username') }}">
				                  		{{ form_error('username', '<div class="shj_error">', '</div>') }}
				                  	</div>
				                  	<div class="form-group">
				                    	<input type="text" name="display_name" id="display_name" tabindex="1" class="form-control" placeholder="Display Name">
				                  	</div>					               
				                  	<div class="form-group">
				                    	<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="{{ set_value('email') }}">
										{{ form_error('email','<div class="shj_error">','</div>') }}
				                  	</div>
				                  	<div class="form-group">
				                    	<input type="text" name="class" id="class" tabindex="1" class="form-control" placeholder="Class">
				                  	</div>				                  	
				                  	<div class="form-group">				                  	
				                    	<input type="password" name="password" id="password" required="required" pattern=".{6,200}" title="The Password field must be at least 6 characters in length" tabindex="2" class="form-control" placeholder="Password">
				                    	{{ form_error('password','<div class="shj_error">','</div>') }}
				                  	</div>
				                  	<div class="form-group">
				                    	<input type="password" name="password_again" id="form_password_2" required="required" pattern=".{6,200}" title="The Password Confirmation field must be at least 6 characters in length" tabindex="2" class="form-control" placeholder="Confirm Password">
				                    	{{ form_error('password_again','<div class="shj_error">','</div>') }}
				                  	</div>
				                  	<div class="form-group">
				                    	<div class="row">
				                      		<div class="col-sm-6 col-sm-offset-3">
				                        		<input type="button" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
				                      		</div>
				                    	</div>
				                  	</div>
				                </form>
            				</div>
	          			</div>
	        		</div>
			        <div class="panel-heading">
			          	<div class="row">
			            	<div class="col-xs-6 tabs">
			              		<a href="#" class="active" id="login-form-link"><div class="login">LOGIN</div></a>
			            	</div>
				            <div class="col-xs-6 tabs">
				              	<a href="#" id="register-form-link"><div class="register">REGISTER</div></a>
				            </div>
			          	</div>
			        </div>
	      		</div>
	    	</div>
		</div>
	</div>
	<div class="modal fade" id="register_success" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
      	<div class="modal-dialog">
    		<div class="modal-content">
				<div class="container">
					<div class="row text-center">
				        <div class="col-sm-6">
					        <br><br> <h2 style="color:#0fad00">Success</h2>
					        <img src="{{ base_url('assets/images/check-true.jpg') }}">
					        <h3 id="dear"></h3>
					        <p style="font-size:20px;color:#5C5C5C;">Thank you for register</p>
					        <a href="" id="success" class="btn btn-success">     Log in      </a>
				        </div>
					</div>
				</div>
       	 	</div>
  		</div>
  	</div>

</body>
</html>