<!DOCTYPE html>
<html>
<head>
	<meta content="text/html" charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	
	<link rel="stylesheet" href="{{ base_url('assets/css/bootstrap.css') }}">
	<link rel="stylesheet" href="{{ base_url('assets/css/bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ base_url('assets/css/bootstrap-theme.min.css') }}">
	<link rel="stylesheet" href="{{ base_url('assets/css/style.css') }}">
	<link rel="stylesheet" href="{{ base_url('assets/css/dataTables.bootstrap.min.css') }}">

	<link rel="stylesheet" type='text/css' href="{{ base_url('assets/styles/main.css') }}"/>
	<script type="text/javascript" src="{{ base_url('assets/js/jquery-3.2.1.min.js') }}"></script>
	<script type="text/javascript" src="{{ base_url('assets/js/thien_datatable.js') }}"></script>
	<script type="text/javascript" src="{{ base_url('assets/js/jquery.dataTables.min.js') }}"></script>
	<script type="text/javascript" src="{{ base_url('assets/js/dataTables.bootstrap.min.js') }}"></script>

</head>
<body>
	{% include 'templates/bar.twig' %}

	<div class="container" style="padding-top: 80px">

	  	<div class="panel-heading"></div>
			<div class="row">
		 		<table class="table table-hover table-striped dataxephang">
					<thead>
			            <tr>
			                <th>Xếp hạng</th>
			                <th>Lớp</th>
			                <th>User</th>
			                <th>HọTên</th>
			                <th>Mail</th>
			                <th>Điểm bài tập</th>
			                <th>Điểm thi đấu</th>
			                <th>Tổng điểm</th>
			            </tr>
	  				</thead>

			      	<tbody>
			            {% for user in users %}
							<tr data-id="{{ user.id }}">
								<td>{{ loop.index }}</td>
								<td>{{ user.class }}</td>
								<td>{{ user.username }}</td>
								<td>{{ user.display_name }}</td>
								<td>{{ user.email }}</td>
								<td>{{ user.diembaitap }}</td>
								<td>{{ user.diemthidau }}</td>
								<td>{{ user.tongdiem }}</td>
							</tr>
						{% endfor %}
		        	</tbody>
		  		</table>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="{{ base_url('assets/js/bootstrap.min.js') }}"></script>
</body>
</html>